<?xml version="1.0" encoding="utf-8"?><selector xmlns:android="http://schemas.android.com/apk/res/android">    <item android:state_pressed="false">        <shape>            <solid                android:color="#6a1b9a" />            <stroke                android:width="0px"                android:color="@color/black" />            <corners                android:topLeftRadius="300dp"                android:bottomLeftRadius="300dp"                android:topRightRadius="300dp"                android:bottomRightRadius="300dp"                />        </shape>    </item>    <item android:state_pressed="true" >        <shape>            <solid                android:color="#4a148c" />            <stroke                android:width="1px"                android:color="#4a148c" />            <corners android:radius="20dp" />        </shape>    </item></selector>