<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_marginHorizontal="8dp"    android:layout_marginTop="10dp"    android:padding="8dp"    app:cardCornerRadius="16dp">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="4dp"        android:background="#f3e5f5">        <androidx.cardview.widget.CardView            android:id="@+id/cardView4"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_marginStart="4dp"            android:layout_marginBottom="12dp"            android:padding="8dp"            app:cardCornerRadius="50dp"            app:layout_constraintBottom_toTopOf="@+id/materialImage"            app:layout_constraintStart_toStartOf="parent">            <ImageView                android:id="@+id/userImage"                android:layout_width="40dp"                android:layout_height="40dp"                android:src="@drawable/costum_person_icon" />        </androidx.cardview.widget.CardView>       <TextView            android:id="@+id/materialuserName"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:text="Student"            android:textSize="16sp"            android:textColor="@color/black"            app:layout_constraintBottom_toBottomOf="@+id/cardView4"            app:layout_constraintStart_toEndOf="@+id/cardView4"            app:layout_constraintTop_toTopOf="@+id/cardView4"            app:layout_constraintVertical_bias="0.86" />        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/constraintLayout"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:paddingTop="8dp">            <androidx.constraintlayout.helper.widget.Flow                android:id="@+id/flow2"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical"                android:paddingTop="40dp"                android:padding="16dp"                app:constraint_referenced_ids="materialImage,materialTitile,materialDesc,openLink"                app:flow_verticalGap="4dp"                app:layout_constraintTop_toBottomOf="@+id/cardView4" />            <ImageView                android:id="@+id/materialImage"                android:layout_width="match_parent"                android:layout_height="180dp"                android:scaleType="centerCrop"                android:src="@drawable/defoultimage" />            <TextView                android:id="@+id/materialTitile"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingHorizontal="8dp"                android:text="@string/title"                android:textColor="#2C1459"                app:layout_constraintStart_toStartOf="parent"                tools:layout_editor_absoluteY="198dp" />            <TextView                android:id="@+id/materialDesc"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingHorizontal="10dp"                android:text="@string/decription"                android:textColor="#817F7F"                android:textSize="12sp"                android:textStyle="italic"                app:layout_constraintStart_toStartOf="parent"                tools:layout_editor_absoluteY="219dp" />            <ImageView                android:id="@+id/editmenu"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@drawable/ic_baseline_more_vert_24"                app:layout_constraintBottom_toBottomOf="@+id/cardView4"                app:layout_constraintEnd_toEndOf="@+id/materialImage"                app:layout_constraintTop_toTopOf="@+id/cardView4" />        </androidx.constraintlayout.widget.ConstraintLayout>    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>